<configuration>

    <!-- Root logger configuration -->
    <root level="info">
        <!-- Console appender -->
        <appender-ref ref="CONSOLE"/>
        <!-- File appender -->
        <appender-ref ref="FILE"/>
    </root>

    <!-- Console appender configuration -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Colorized pattern for console, applying red to ERROR messages -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %highlight(%5p){FATAL=RED,ERROR=RED} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender configuration -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/main/java/logs/app.log</file>
        <encoder>
            <!-- Include the log level (ERROR, INFO, WARN, etc.) and message in the file log -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - [%level] - %msg%n</pattern>
        </encoder>
    </appender>

</configuration>
